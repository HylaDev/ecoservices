{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block content %}
<div class="container" id="paiement">
    <form id="payment-form">
        <div class="row">
            <div class="col-md-6">
                <input type="text" class="form-control p-3" id="cardholder-name" placeholder="Nom sur la carte">
                <div id="card-element" class="form-control my-3 p-3"></div>
                <button id="card-button" class="border text-white w-50 p-2 m-bg-primary" type="submit" data-secret="{{ client_secret }}">
                    Payer
                </button>
            </div>
        </div>
    </form>
    <script src="https://js.stripe.com/v3/"></script>
    <script>
        var stripe = Stripe('{{ stripe_public_key }}');
        var elements = stripe.elements();
        var card = elements.create('card');
        card.mount('#card-element');

        var form = document.getElementById('payment-form');
        var clientSecret = form.querySelector('button').dataset.secret;

        form.addEventListener('submit', async (event) => {
            event.preventDefault();

            const { paymentIntent, error } = await stripe.confirmCardPayment(
                clientSecret, {
                    payment_method: {
                        card: card,
                        billing_details: { name: document.getElementById('cardholder-name').value }
                    }
                }
            );

            if (error) {
                console.error(error);
            } else {
                console.log('Payment successful!', paymentIntent);
                window.location.replace("{{ path('payment_confirmation') }}");
            }
        });
    </script>

</div>
{% endblock %}
