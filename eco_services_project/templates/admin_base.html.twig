<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}{% endblock %}</title>
    {% block stylesheets %}
    <!--Bootstrap 5 link-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <!-- Locals Stylesheet -->
        <link rel="stylesheet" href="{{ asset('styles/admin.css') }}">
    {% endblock %}

    {% block extrastylesheets %}
    {% endblock %}
</head>
<body>
    <!-- mon sidebar  -->
    <div class="sidebar">
        <a href="{{ path('app_admin') }}" class="active" title="Tableau de bord"><i class="fa fa-dashboard"></i> <span>Tableau de bord</span></a>
        <a href="{{ path('app_product_index') }}" title="Gestion des produits"><i class="fa fa-product-hunt"></i> <span>Gestion des produits</span></a>
        <a href="{{ path('app_service_index') }}" title="Gestion des services"><i class="fa fa-wrench"></i> <span>Gestion des services</span></a>
        <a href="{{ path('app_qr_status_index') }}" title="gestion des status"><i class="fa fa-question-circle"></i> <span>Gestion des status</span></a>
        <a href="{{ path('app_product_category_index') }}" title="gestion des catégories"><i class="fa fa-pallet"></i> <span>Gestion des catégories</span></a>
        <a href="{{ path('app_gestion_devis') }}" title="gestion des devis"><i class="fa fa-quote-left"></i> <span>Gestion des devis</span></a>
        <a href="{{ path('logout') }}" title="Déconnexion"><i class="fa fa-sign-out"></i> <span>Déconnexion</span></a>
    </div>

   {% block content %}{% endblock %}
    {% block footer %}
    {% endblock %}
    {% block script %}
    <!--Bootstrap 5 script-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <!--Fontawesome -->
    <script src="https://kit.fontawesome.com/c2cd48c276.js" crossorigin="anonymous"></script>
    {% endblock %}
</body>
</html>