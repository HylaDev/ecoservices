{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des produits{% endblock %}

{% block content %}
    <div class="content">
        <div class="container mt-5 myd-flex">
            
            <div class="">
                <h1>Liste des produits</h1>
                <a href="{{ path('app_product_new') }}" class="btn btn-primary m-3">Ajouter un produit</a>
            </div>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Image</th>
                            <th>Designation</th>
                            <th>Price</th>
                            <th>Description</th>
                            <th>Categorie</th>
                            <th>Quantité en stock</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for product in products %}
                        <tr>
                            <td>
                                {% if product.image %}
                                    <img src="{{ asset('assets/img/products/' ~ product.image) }}" class="img-fluid rounded" style="width: 80px; height: 40px;" alt="Image">
                                {% else %}
                                    <img src="{{ asset('assets/img/num.jpg') }}" class="img-fluid rounded" style="width: 80px; height: 40px;" alt="">
                                {% endif %}
                            </td>
                            <td>{{ product.designation }}</td>
                            <td>{{ product.price }}</td>
                            <td>{{ product.description }}</td>
                            <td>{{ product.category.designation }}</td>
                            {% if product.stock %}
                                <td>{{ product.stock.quantity }}</td>
                            {% else %}
                                <td>non disponible</td>
                            {% endif %}
                            <td class="d-flex">
                                <a class="mt-2" href="{{ path('app_product_edit', {'id': product.id}) }}">
                                    <i class="fa fa-pencil text-green"></i>
                                </a>
                                <a href="">
                                    {{ include('product/_delete_form.html.twig') }}
                                </a>
                            </td> 
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">Aucun produit ajouté</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
