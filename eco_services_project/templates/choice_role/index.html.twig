{% extends 'base.html.twig' %}

{% block title %}Hello ChoiceRoleController!{% endblock %}

{% block content %}

<div class="container py-5 mt-5">
    <h1>Hello {{ controller_name }}! ✅</h1>

    Vous êtes:
    <ul>
       {% for role in roles %}
            <li><a href="{{ path('app_register', { 'role_id': role.id }) }}">
                    {{ role.name }}
                </a></li>
        {% endfor %}
    </ul>
</div>
{% endblock %}
