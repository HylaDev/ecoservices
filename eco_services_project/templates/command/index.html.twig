{% extends 'admin_base.html.twig' %}

{% block title %}Liste des commandes{% endblock %}

{% block content %}
    <div class="content">
        <div class="container mt-5 myd-flex">
            
            <div class="">
                <h1>Liste des commandes</h1>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Date</th>
                            <th>Validity</th>
                            <th>Total</th>
                            <th>actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for command in commands %}
                        <tr>
                            <td>{{ command.id }}</td>
                            <td>{{ command.date ? command.date|date('Y-m-d H:i:s') : '' }}</td>
                            <td>{{ command.validity ? 'Yes' : 'No' }}</td>
                            <td>{{ command.total }}</td>
                            <td>
                                <a href="{{ path('app_command_show', {'id': command.id}) }}">DÃ©tails</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="5">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
