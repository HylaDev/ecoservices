{% extends 'base.html.twig' %}

{% block title %}Catégories{% endblock %}

{% block content %}

<div class="container" id="categories">
    <div class="breadcrumb">
        <a href="">Accueil</a> <span class="mx-2">/</span> <p class="">Catégories</p>
    </div>
    <div class="row">
        {% for category in categories %}
            <div class="col-md-6 col-lg-3">
                <a href="{{ path('shop', { 'category_id': category.id }) }}">
                    <div class="text-center category-card m-bg-secondary p-4">
                        <div class=" mb-5 mx-auto">
                            <img src="{{ asset('assets/img/num.jpg') }}" class="img-fluid" alt="">
                        </div>
                        <div class=" text-white text-center">
                            <h5>{{ category.designation }}</h5>
                        </div>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
