{% extends 'admin_base.html.twig' %}

{% block title %}Gestion des utilisateusrs{% endblock %}

{% block content %}
    <div class="content">
        <div class="container mt-5">
            
            <div class="">
                <h1>Liste des utilisateurs</h1>
            </div>

            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Email</th>
                            <th>Lastname</th>
                            <th>Firstname</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Siren</th>
                            <th>RoleClient</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for user in users %}
                        <tr>
                            <td>{{ user.email }}</td>                          
                            <td>{{ user.lastname }}</td>
                            <td>{{ user.firstname }}</td>
                            <td>{{ user.phone }}</td>
                            <td>{{ user.address }}</td>
                            <td>{{ user.siren }}</td>
                            {% if user.customerRole %}
                                <td>
                                    {{ user.customerRole.name }}
                                </td>
                            {% else %}
                                <td>Admin</td>
                            {% endif %}
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="10">Aucun utilisateur</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
