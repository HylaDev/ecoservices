{% extends 'base.html.twig' %}

{% block title %}Checkout{% endblock %}

{% block content %}

<div class="container" id="checkout">
    <div class="breadcrumb">
        <a href="{{ path('home') }}">Accueil</a> <span class="mx-2">/</span> <p class="">Panier</p>
    </div>
    <h1 class="mb-4">Vos Informations</h1>
    <form action="#">
        <div class="row g-5">
            <div class="col-md-12 col-lg-6 col-xl-7">
                <div class="row">
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label class="form-label my-3">Nom</label>
                            <input type="text" value="{{ user.lastname }}" class="form-control" disabled>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-6">
                        <div class="form-item w-100">
                            <label class="form-label my-3">Prénom</label>
                            <input type="text" value="{{ user.firstname }}" class="form-control" disabled>
                        </div>
                    </div>
                </div>
                <div class="form-item">
                    <label class="form-label my-3">Téléphone</label>
                    <input type="tel" class="form-control" value="{{ user.phone }}" disabled>
                </div>
                <div class="form-item">
                    <label class="form-label my-3">Adresse e-mail</label>
                    <input type="email" class="form-control" value="{{ user.email }}" disabled>
                </div>        
                <h1 class="mb-4">Adresse de Livraison</h1>
                <div class="form-item">
                    <input type="email" class="form-control" value="{{ user.address }}" disabled>
                </div>
            </div>
    
            <div class="col-md-12 col-lg-6 col-xl-5">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Produits</th>
                                <th scope="col">Nom</th>
                                <th scope="col">Prix</th>
                                <th scope="col">Quantité</th>
                                <th scope="col">Total</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for cart in carts %}
                                <tr>
                                    <th scope="row">
                                        <div class="d-flex align-items-center mt-2">
                                            {% if cart.product.image %}
                                                <img src="{{ asset('assets/img/products/' ~ cart.product.image) }}" class="img-fluid rounded-circle" style="width: 60px; height: 60px;" alt="">
                                            {% else %}
                                                <img src="{{ asset('assets/img/num.jpg') }}" class="img-fluid rounded-circle" style="width: 60px; height: 60px;" alt="">
                                            {% endif %}
                                            
                                        </div>
                                    </th>
                                    <td class="py-5">{{ cart.product.designation }}</td>
                                    <td class="py-5">{{ cart.price }}</td>
                                    <td class="py-5">{{ cart.quantity }}</td>
                                    <td class="py-5">{{ cart.total }}</td>
                                </tr>
                            {% endfor %}
                            <tr>
                                <th scope="row"></th>
                                <td class="py-5"></td>
                                <td class="py-5"></td>
                                <td class="py-5">Total</td>
                                <td class="py-5">{{ total }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="row g-4 text-center align-items-center justify-content-center border-bottom py-3">
                    <div class="col-12">
                        <div class="form-check text-start my-3">
                            <input type="checkbox" class="form-check-input bg-primary border-0" id="Paypal-1" name="Paypal" value="Paypal">
                            <label class="form-check-label" for="Paypal-1">Stripe</label>
                        </div>
                    </div>
                </div>
                <div class="row g-4 text-center align-items-center justify-content-center pt-4">
                    <a href="{{ path('create_payment_intent')}}" type="button" class="btn border-secondary py-3 px-4 w-100 text-primary">Commander</a>
                </div>
            </div>
        </div>
    </form>
</div>
{% endblock %}
