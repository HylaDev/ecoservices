{% extends 'base.html.twig' %}

{% block title %}Profil{% endblock %}

{% block content %}

<div class="container" id="profil">
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead class="table-dark">
                <tr>
                    <th>Produit</th>
                    <th>Quantit√©</th>
                    <th>Prix</th>
                    <th>Total</th>
                </tr>
            </thead>
            <tbody>
            {% for command_detail in command_details %}
                <tr>
                    <td>{{ command_detail.product.designation }}</td>
                    <td>{{ command_detail.quantity }}</td>
                    <td>{{ command_detail.price }}</td>
                    <td>{{ command_detail.total }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>
{% endblock %}
